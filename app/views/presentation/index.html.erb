<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Fachbereichsduell" %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%# stylesheet_link_tag "application", :media => "all" %>
    <%# stylesheet_link_tag "normalize" %>

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the top of the document so jquery works in templates... -->
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "presentation" %>


    <style type="text/css">
      body {
        background-image: url('<%= asset_path "bg-mesh.png" %>');
        font-family: 'unibody8';
        font-size: 30px;
        color: rgb(140, 255, 0);
        margin: 0px;
        padding: 0px;
      }

      table {
        font-size: 25px;
      }

      @font-face {
        font-family: 'unibody8';
        src: url('<%= asset_path "unibody8-regular.eot" %>');
        src: url('<%= asset_path "unibody8-regular.woff" %>') format('woff'),
        url('<%= asset_path "unibody8-regular.ttf" %>') format('truetype'),
        url('<%= asset_path "unibody8-regular.svg#unibody8-regular" %>') format('svg');
        font-weight: normal;
        font-style: normal;
      }

      .container {
        width: 1021px;
        height: 744px;
        margin: 0px;
        padding: 0px;
      }

      .footer {
        margin-top: 10px;
        background-image: url('<%= asset_path "bg-mesh-green.png" %>');
        color: black;
        font-size: 45px;
      }

      .footer-line {
        background-image: url('<%= asset_path "bg-mesh-green.png" %>');
        height: 5px;
      }

      .footer-container {
        position: absolute;
        left: 0;
        top: 0px;
        width: 1021px;
      }

    </style>
  </head>
  <body>
    <div class="container">
      <div class="footer-container">
        <div class="footer-line">
        </div>

        <table cellspacing="0" style="width: 100%;" class="footer">
          <tr>
            <td style="width: 250px;"><span id="team_1_points_and_xes"></span></td>
            <td style="text-align: center;"><span id="round-nr"></span></td>
            <td style="text-align: right; width: 250px;"><span id="team_2_points_and_xes">&nbsp;</span></td>
          </tr>
        </table>
      </div>

      <div id="ajax-container" style="margin-top: 100px;">
      </div>
    </div>

  <audio autobuffer src="/antwort.wav" preload="auto" id="answer_audio" style="display: none;">
  </audio>
  <audio autobuffer src="/bling2.wav" preload="auto" id="points_audio" style="display: none;">
  </audio>
  <audio autobuffer src="/zonk.wav" preload="auto" id="zonk_audio" style="display: none;">
  </audio>
  </body>
</html>
